
<div id="accordion" class="w-100 mt-5">
    <div class="card mw-100" id="{{id}}">
        <div class="card-header mw-100" id="headingOne">
            <div class="mb-0 mw-100 d-flex justify-content-between align-items-center">
                <input type="text" id="title" value="{{title}}" style="border: none; outline: none" >
                <div>
                    <a class="btn btn-success" href="{{url}}" id="save">
                        Salvar
                    </a>
                    <a class="btn btn-success" id="view"  data-toggle="collapse" data-target="#collapseOne{{id}}" aria-expanded="true" aria-controls="{{id}}">
                        Visualizar
                    </a>
                </div>
            </div>
        </div>

        <div id="collapseOne{{id}}" class="collapse  mw-100" aria-labelledby="{{id}}" data-parent="#accordion">
            <div class="card-body">
                <div class=" w-100 ">
                    <textarea class="form-control" id="textarea" style="border: none; resize: none; outline: 0" rows="10">{{note}}</textarea>
                </div>

            </div>
        </div>
    </div>
</div>
